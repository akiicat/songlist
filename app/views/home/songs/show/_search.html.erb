<table class="table table-striped">
  <col width="30%">
  <col width="50%">
  <thead>
    <tr>
      <th>歌手</th>
      <th>歌名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr class="tr-wrapper">
        <td><code class="singer"><%= song.singer.name_with_translation %></code></td>
        <td>
          <code>
            <%= song.title_with_translation %>
            <span class="description">
              <% t = "#{song.composer.name_with_translation} #{song.description}".strip %>
              <%= "(#{t})" unless t.blank? %>
            </span>
          </code>
        </td>
        <td>
          <% unless song.lyric_url.blank? %>
            <%= link_to song.lyric_url do %>
              <%= image_tag "lyrics.png", class: "icon right" %>
            <% end %>
          <% end %>
          <% unless song.video_url.blank? %>
            <%= link_to song.video_url do %>
              <%= image_tag "youtube.png", class: "icon right" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
