<table class="table table-striped">
  <col width="30%">
  <col width="50%">
  <thead>
    <tr>
      <th>歌手</th>
      <th>歌名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr class="tr-wrapper">
        <td>
          <code>
            <%= link_to edit_dashboard_singer_path(song.singer) do %>
              <%= octicon "pencil" %>
              <%= song.singer.name_with_translation %>
            <% end %>
          </code>
        </td>
        <td>
          <code>
            <%= link_to edit_dashboard_song_path(song) do %>
              <%= octicon "pencil", class: "icon oct" %>
              <%= song.title_with_translation %>
              <span class="description">
                <% t = "#{song.composer.name_with_translation} #{song.description}".strip %>
                <%= "(#{t})" unless t.blank? %>
              </span>
            <% end %>
          </code>
        </td>
        <td>
          <%= link_to dashboard_song_path(song), method: :delete, data: { confirm: '你真的確定要刪除？' } do %>
            <%= octicon "trashcan", height: "22px", class: "icon right" %>
          <% end %>
          <%= octicon "clippy", height: "22px", class: "icon right", "data-clippy": song.name_all %>

          <% unless song.lyric_url.blank? %>
            <%= link_to song.lyric_url, target: "_blank" do %>
              <%= image_tag "lyrics.png", class: "icon right" %>
            <% end %>
          <% end %>
          <% unless song.video_url.blank? %>
            <%= link_to song.video_url, target: "_blank" do %>
              <%= image_tag "youtube.png", class: "icon right" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
