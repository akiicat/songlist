<table class="table table-striped">
  <col width="30%">
  <col width="50%">
  <thead>
    <tr>
      <th>歌手</th>
      <th>歌名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr class="song-wrapper">
        <td>
          <code class="singer">
            <%= link_to dashboard_singer_path(song.singer) do %>
              <%= octicon "pencil" %>
              <%= song.singer.name_with_translation %>
            <% end %>
          </code>
        </td>
        <td>
          <code class="song">
            <%= link_to dashboard_song_path(song) do %>
              <%= octicon "pencil", class: "icon oct" %>
              <%= song.title_with_translation %>
              <span class="description">
                <% t = "#{song.composer.name_with_translation} #{song.description}".strip %>
                <%= "(#{t})" unless t.blank? %>
              </span>
            <% end %>
          </code>
        </td>
        <td>
          <%= link_to dashboard_song_path(song), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= octicon "trashcan", height: "22px", class: "icon right", :"aria-label" => "delete" %>
          <% end %>
          <% unless song.lyric_url.blank? %>
            <%= link_to song.lyric_url do %>
              <%= image_tag "lyrics.png", class: "icon right" %>
            <% end %>
          <% end %>
          <% unless song.video_url.blank? %>
            <%= link_to song.video_url do %>
              <%= image_tag "youtube.png", class: "icon right" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
