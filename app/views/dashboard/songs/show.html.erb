<% content_for :video do %>
  <div class="video-wrapper">
    <% if @song.video_url =~ /youtube/ %>
      <iframe src="<%= @song.video_url.gsub("watch?v=", "v/") + "?autoplay=1" %>" frameborder="0" allowfullscreen></iframe>

    <% end %>
    <% if @song.video_url =~ /nicovideo/ %>
      <script src="<%= "http://ext.nicovideo.jp/thumb_watch/" + @song.video_url.split("/").last %>" type="text/javascript"></script>
    <% end %>
  </div>
<% end %>

<p>
  <strong>Singer:</strong>
  <%= link_to @song.singer.name, dashboard_singer_path(@song.singer) if @song.singer %>
</p>

<p>
  <strong>Composer:</strong>
  <%= link_to @song.composer.name, dashboard_singer_path(@song.composer) if @song.composer %>
</p>

<p>
  <strong>Title:</strong>
  <%= @song.title %>
</p>

<p>
  <strong>Title translation:</strong>
  <%= @song.title_translation %>
</p>

<p>
  <strong>Description:</strong>
  <%= @song.description %>
</p>

<p>
  <strong>Lyric url:</strong>
  <%= @song.lyric_url %>
</p>

<p>
  <strong>Video url:</strong>
  <%= @song.video_url %>
</p>
