<header>
  <h1>歌手</h1>
</header>

<table class="table table-striped">
  <col width="30%">
  <col width="30%">
  <col width="10%">
  <col width="10%">
  <thead>
    <tr>
      <th>歌手</th>
      <th>翻譯</th>
      <th>歌手數量</th>
      <th>作曲數量</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @singers.each do |singer| %>
      <tr class="tr-wrapper">
        <td><code><%= singer.name %></code></td>
        <td><code><%= singer.name_translation %></code></td>
        <td><code><%= singer.count_of_singer_songs %></code></td>
        <td><code><%= singer.count_of_composer_songs %></code></td>
        <td><code><%= singer.name_translation %></code></td>

        <td><%= link_to 'Show', dashboard_singer_path(singer) %></td>
        <td><%= link_to 'Edit', edit_dashboard_singer_path(singer) %></td>
        <td><%= link_to 'Destroy', dashboard_singer_path(singer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
